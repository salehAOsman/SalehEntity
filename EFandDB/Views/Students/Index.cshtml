@model IEnumerable<EFandDB.Models.Student>

@{ViewBag.Title = "Index Student";}
<h2>Index Student</h2>
<p>@Html.ActionLink("Add New Student", "Create")</p>
<table class="table">
    <tr>
        <!--we add here sorting in index for list of students-->
        <!--we use here href="  here we write the input that will display in Url to be input for path of action "-->
        <th><a href="@Url.Action("index","Students", new { orderBy=ViewBag.OrderNameBy })">@Html.DisplayNameFor(model => model.Name)</a></th>
        <th>@Html.DisplayNameFor(model => model.City)</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {   <tr>
             <td>@Html.DisplayFor(modelItem => item.Name)</td>
             <td>@Html.DisplayFor(modelItem => item.City)</td>
             
             <td>@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                 @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                 @Html.ActionLink("Delete", "Delete", new { id = item.Id })
             </td>
         </tr>
    }
</table>
<div>@Html.ActionLink("Back to List", "Index", "Home")</div>
