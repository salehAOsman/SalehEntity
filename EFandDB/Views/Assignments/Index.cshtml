@model IEnumerable<EFandDB.Models.Assignment>

@{
    ViewBag.Title = "Index";
}

<h2>Index Assignment</h2>

<p>
    @Html.ActionLink("Add New Assignment", "Create")
</p>
<table class="table">
    <tr>
        <th><a href="@Url.Action("Index", "Assignments", new { orderBy = ViewBag.orderNameBy })">@Html.DisplayNameFor(model => model.Name)</a></th>
        <th>@Html.DisplayNameFor(model => model.Descriptions)</th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Name)</td>
        <td>@Html.DisplayFor(modelItem => item.Descriptions)</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</table>

<div>@Html.ActionLink("Back To List","Index","Home") </div>