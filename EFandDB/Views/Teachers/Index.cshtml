@model IEnumerable<EFandDB.Models.Teacher>

@{ViewBag.Title = "Index";}
<h2>Index Teacher</h2>
<p>@Html.ActionLink("Add New Teacher", "Create")</p>
<table class="table">
    <tr>
        <th><a href="@Url.Action("Index", "Teachers", new { orderBy = ViewBag.OrderNameBy })">@Html.DisplayNameFor(model => model.Name)</a></th>
        <th>@Html.DisplayNameFor(model => model.City)</th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Name)</td>
        <td>@Html.DisplayFor(modelItem => item.City)</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id ,@class="btn btn-danger" })
        </td>
    </tr>
}
</table>
<div>@Html.ActionLink("Back to List", "Index", "Home")</div>